<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dataLabeler.DlLogin">

    <Button
        android:id="@+id/register"
        android:layout_width="254dp"
        android:layout_height="66dp"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        android:enabled="true"
        android:onClick="OnSubmit"
        android:text="Register"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="322dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:text="Register as data labeler"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/education"
        android:layout_width="320dp"
        android:layout_height="136dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/publications"
        android:layout_width="320dp"
        android:layout_height="136dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/expertise"
        android:layout_width="320dp"
        android:layout_height="136dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="416dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/edu_text"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="24dp"
        android:text="Education/Qualification :-"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/exp_text"
        android:layout_width="216dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="200dp"
        android:text="Work experience :-"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/spe_text"
        android:layout_width="277dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="376dp"
        android:text="Specific expertise (optional) :-"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>